{
  "name": "angular-boilerplate",
  "version": "0.0.1",
  "description": "Angular (4.x) boilerplate with support for Sass, Pug and AOT compilation",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack/development.js --open",
    "build": "npm run clean && webpack --config config/webpack/production.js",
    "serve": "lite-server -c config/lite-server.config.json",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huubhermsen/angular-boilerplate.git"
  },
  "keywords": [
    "Angular",
    "Sass",
    "Pug",
    "AOT",
    "JIT"
  ],
  "author": "Huub Hermsen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/huubhermsen/angular-boilerplate/issues"
  },
  "homepage": "https://github.com/huubhermsen/angular-boilerplate#readme",
  "dependencies": {
    "@angular/common": "^4.1.1",
    "@angular/compiler": "^4.1.1",
    "@angular/core": "^4.1.1",
    "@angular/forms": "^4.1.1",
    "@angular/http": "^4.1.1",
    "@angular/platform-browser": "^4.1.1",
    "@angular/platform-browser-dynamic": "^4.1.1",
    "@angular/router": "^4.1.1",
    "core-js": "^2.4.1",
    "rxjs": "^5.3.1",
    "zone.js": "^0.8.10"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.1.1",
    "@ngtools/webpack": "^1.3.1",
    "@types/core-js": "^0.9.41",
    "@types/node": "^7.0.18",
    "angular-router-loader": "^0.6.0",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^7.0.1",
    "awesome-typescript-loader": "^3.1.3",
    "css-loader": "^0.28.1",
    "es6-shim": "^0.35.3",
    "exports-loader": "^0.6.4",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "lite-server": "^2.3.0",
    "node-sass": "^4.5.2",
    "postcss-loader": "^2.0.1",
    "pug": "^2.0.0-rc.1",
    "pug-html-loader": "^1.1.4",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0"
  }
}
